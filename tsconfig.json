{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "baseUrl": ".",
    "paths": {
      "@resources/*": [
        "src/resources/*"
      ],
      "@fixtures/*": [
        "src/fixtures/*"
      ],
      "@pages/*": [
        "src/poms/pages/*"
      ],
      "@components/*": [
        "src/poms/components/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@helpers/*": [
        "src/helpers/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
  ]
}